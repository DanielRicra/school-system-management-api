{
  "name": "school-system-management",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run ./src/db/drizzle/migrate.ts",
    "db:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "db:seed": "bun run ./src/db/drizzle/seed.ts",
    "lint": "bunx @biomejs/biome lint --apply ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "check": "bunx @biomejs/biome check --apply ./src",
    "build": "tsc --build",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@types/bcryptjs": "2.4.6",
    "@types/bun": "latest",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "8.11.5",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "^1.5.0",
    "drizzle-kit": "^0.20.14",
    "supertest": "6.3.4",
    "typescript": "5.4.5",
    "vitest": "1.5.0"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "drizzle-orm": "^0.30.8",
    "drizzle-valibot": "0.2.0",
    "env-var": "7.4.1",
    "express": "4.19.2",
    "jsonwebtoken": "9.0.2",
    "pg": "^8.11.5",
    "valibot": "0.30.0"
  }
}